<div class="order-edit">
	<h2>依頼作品編集</h2>
	<%= form_for(@order_work) do |f| %>
			<div style="width: 40%; margin: 0 auto; padding-bottom: 20px;">
				<%= render 'layouts/error_message', model: f.object %>
			</div>
			<table class="order-work-form">
				<tr>
					<th><%= f.label :name, "商品名" %></th>
					<td><%= f.text_field :name %></td>
				</tr>
				<tr>
					<th><%= f.label :description, "商品説明" %></th>
					<td><%= f.text_area :description, rows: 3 %></td>
				</tr>
				<tr>
					<th><%= f.label :order_genre_id, "ジャンル" %></th>
					<td class="select_field"><%= f.collection_select :order_genre_id, OrderGenre.all, :id, :name %></td>
				</tr>
				<tr>
					<th><%= f.label :price, "商品価格" %></th>
					<td><%= f.text_field :price %> 円</td>
				</tr>
				<tr>
					<th><%= f.label :is_sales, "公開ステータス" %></th>
					<td class="select_field">
						<%= f.radio_button :is_sales, true %>
						<%= f.label :is_sales, "公開中", class: "text-active" %>
						<%= f.radio_button :is_sales, false %>
						<%= f.label :is_sales, "公開停止中", class: "text-invalid" %>
					</td>
				</tr>
					<%= f.hidden_field :user_id, :value => current_user.id %>
					<%= f.hidden_field :id, :value => @order_work.id %>
			</table>
			<div style="width: 20%; margin: 0 auto; padding-top: 40px;">
				<%= f.submit "変更を更新する", data: { confirm: "こちらの内容で変更します。よろしいですか？"}, class: "btn btn-primary" %>
				<%= link_to "削除する", order_work_path(@order_work), method: :delete, "data-confirm" => "削除します。本当によろしいですか？", class: "btn btn-danger" %>
			</div>
		</div>
	<% end %>
</div>