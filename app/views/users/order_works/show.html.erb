<div class="listing_works">
  <table>
    <thead>
      <tr>
        <td></td>
        <td>商品名</td>
        <td>商品説明</td>
        <td>対応枠</td>
        <td>料金(手数料抜き)</td>
      </tr>
    <tbody>
      <tr>
        <td>
          <% if @order_work.image? %>
            <%= image_tag @order_work.image.to_s %>
          <% elsif @order_work.video?  %>
            <%= link_to @order_work.video_url.to_s do %>
            <%= image_tag(@order_work.video_url(:screenshot).to_s, id: "video", :alt => "screenshot") %>
            <% end %>
          <% else %>
            <%= @order_work.audio %>
          <% end %>
        </td>
        <td><%= @order_work.name %></td>
        <td><%= @order_work.description %></td>
        <td><%= @order_work.price %>円</td>
        <td>
          <% if @order_work.is_sales? %>
          <span class="text-active">公開中</span>
          <%= link_to "提案する", new_proposal_path(@order_work), class: "btn btn-primary" %>
            <% if @order_work.user %>
            <%= link_to "提案文一覧", order_work_proposals_path(@order_work), class: "btn btn-danger" %>
            <% end %>
          <% else %>
          <span class="text-invalid">公開停止中</span>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>