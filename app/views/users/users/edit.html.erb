<div class="user_edit" style="width: 40%; margin: 0 auto;">
<h2>登録情報編集</h2>
	<%= form_for(@user, url: update_user_path) do |f| %>
	<table>
		<tr>
			<th>ニックネーム</th>
			<td><%= f.text_field :name, :placeholder =>"#{@user.name}" %></td>
		</tr>
		<tr>
			<th>メールアドレス</th>
			<td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
		</tr>
		<tr>
			<th>プロフィール画像</th>
			<td><%= f.file_field :profile_image, :accept => 'image/*' %></td>
		</tr>
		<tr>
			<td><%= f.submit "編集内容を保存する", class: "btn btn-primary" %></td>
			<td><%= link_to "退会する", unsubscribe_path(current_user), class: "btn btn-danger" %></td>
		</tr>
	</table>
	<% end %>
</div>