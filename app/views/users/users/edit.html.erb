<div class="user_edit">
<h2>登録情報編集</h2>
	<%= form_for(@user, url: update_user_path) do |f| %>
	<table>
		<thead>
			<th></th>
			<th></th>
			<th></th>
		</thead>
		<tbody>
			<tr>
				<td>ニックネーム</td>
				<td><%= f.text_field :name, :placeholder =>"#{@user.name}" %></td>
				<td>メールアドレス</td>
				<td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
				<td>プロフィール画像</td>
				<td><%= f.file_field :profile_image %></td>
				<td><%= f.submit "編集内容を保存する", class: "btn btn-primary" %></td>
			</tr>
			<tr>
				<td><%= f.submit "編集内容を保存する", class: "btn btn-primary" %></td>
				<td><%= link_to "退会する", unsubscribe_path, class: "btn btn-danger" %></td>
		</tbody>
	</table>
	<% end %>
</div>