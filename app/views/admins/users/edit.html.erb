<div class="admin-user-edit">
	<h2><%= @user.name %>さんのページ</h2>
	<%= form_for(@user, url: admins_user_path(@user)) do |f| %>
	<table class="user_info edit-form">
		<tr>
			<th>ニックネーム</th>
			<td>
			 <%= f.text_field :name, :placeholder =>"#{@user.name}" %>
			</td>
		</tr>
		<tr>
			<th>メールアドレス</th>
			<td><%= f.email_field :email, autocomplete: "email", :placeholder =>"#{@user.email}" %></td>
		</tr>
		<tr>
			<th>会員ステータス</th>
			<td><%= f.radio_button :is_unsubscribe, false %><%= f.label :is_unsubscribr, "有効", class: "text-active" %>
			<%= f.radio_button :is_unsubscribe, true %><%= f.label :is_unsubscribe, "退会済み", class: "text-invalid" %></td>
		</tr>
		<tr>
			<td><%= f.submit "更新", class: "btn btn-primary" %></td>
		</tr>
	</table>
	<% end %>
</div>